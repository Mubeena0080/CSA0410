#include <stdio.h>

int main() {
    int req[20], n, head, dir, size, i, j, total = 0;

    printf("Enter disk size: ");
    scanf("%d", &size);
    printf("Enter number of requests: ");
    scanf("%d", &n);
    printf("Enter requests: ");
    for(i = 0; i < n; i++)
        scanf("%d", &req[i]);
    printf("Enter initial head: ");
    scanf("%d", &head);
    printf("Enter direction (0-left, 1-right): ");
    scanf("%d", &dir);

    for(i = 0; i < n - 1; i++)
        for(j = i + 1; j < n; j++)
            if(req[i] > req[j]) {
                int temp = req[i]; req[i] = req[j]; req[j] = temp;
            }

    int pos;
    for(i = 0; i < n; i++)
        if(req[i] > head) { pos = i; break; }

    if(dir == 1) {
        for(i = pos; i < n; i++) total += abs(req[i] - head), head = req[i];
        total += abs(size - 1 - head), head = size - 1;
        for(i = pos - 1; i >= 0; i--) total += abs(req[i] - head), head = req[i];
    } else {
        for(i = pos - 1; i >= 0; i--) total += abs(req[i] - head), head = req[i];
        total += abs(head - 0), head = 0;
        for(i = pos; i < n; i++) total += abs(req[i] - head), head = req[i];
    }

    printf("Total head movement = %d\n", total);
}
