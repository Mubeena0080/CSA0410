#include <stdio.h>

int main() {
    int block[10], process[10], nb, np, allocation[10], i, j;

    printf("Enter number of blocks: ");
    scanf("%d", &nb);
    printf("Enter block sizes: ");
    for(i = 0; i < nb; i++)
        scanf("%d", &block[i]);

    printf("Enter number of processes: ");
    scanf("%d", &np);
    printf("Enter process sizes: ");
    for(i = 0; i < np; i++)
        scanf("%d", &process[i]);

    for(i = 0; i < np; i++)
        allocation[i] = -1;

    for(i = 0; i < np; i++) {
        int best = -1;
        for(j = 0; j < nb; j++)
            if(block[j] >= process[i])
                if(best == -1 || block[j] < block[best])
                    best = j;

        if(best != -1) {
            allocation[i] = best;
            block[best] -= process[i];
        }
    }

    for(i = 0; i < np; i++)
        if(allocation[i] != -1)
            printf("Process %d allocated to Block %d\n", i, allocation[i]);
        else
            printf("Process %d not allocated\n", i);
}
