#include <stdio.h>
#include <stdlib.h>
#include <sys/shm.h>
#include <sys/ipc.h>
#include <unistd.h>

int main() {
    int shmid;
    char *msg;
    shmid = shmget(IPC_PRIVATE, 100, 0666|IPC_CREAT);

    if (fork() == 0) {
        msg = (char*) shmat(shmid, NULL, 0);
        printf("Child writing to shared memory...\n");
        sprintf(msg, "Hello from child process!");
        shmdt(msg);
        exit(0);
    } else {
        wait(NULL);
        msg = (char*) shmat(shmid, NULL, 0);
        printf("Parent reading from shared memory: %s\n", msg);
        shmdt(msg);
        shmctl(shmid, IPC_RMID, NULL);
    }
    return 0;
}
