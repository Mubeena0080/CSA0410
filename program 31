#include <stdio.h>
int main() {
    int frames, pages, frame[10], page[30], i, j = 0, k, faults = 0, flag;
    printf("Enter number of frames: ");
    scanf("%d", &frames);
    printf("Enter number of pages: ");
    scanf("%d", &pages);
    printf("Enter page reference string: ");
    for(i = 0; i < pages; i++)
        scanf("%d", &page[i]);

    for(i = 0; i < frames; i++)
        frame[i] = -1;

    for(i = 0; i < pages; i++) {
        flag = 0;
        for(k = 0; k < frames; k++)
            if(frame[k] == page[i]) flag = 1;

        if(flag == 0) {
            frame[j] = page[i];
            j = (j + 1) % frames;
            faults++;
        }

        printf("\n");
        for(k = 0; k < frames; k++)
            printf("%d ", frame[k]);
    }
    printf("\nTotal Page Faults = %d\n", faults);
    return 0;
}
