#include <stdio.h>
#include <string.h>

#define MAX_FILES 100
#define MAX_NAME 64

char files[MAX_FILES][MAX_NAME];
int file_count = 0;

void create_file(const char *name) {
    if (file_count >= MAX_FILES) { printf("Directory full.\n"); return; }
    for (int i = 0; i < file_count; ++i) {
        if (strcmp(files[i], name) == 0) { printf("File already exists.\n"); return; }
    }
    strncpy(files[file_count++], name, MAX_NAME-1);
    files[file_count-1][MAX_NAME-1] = '\0';
    printf("Created file '%s'\n", name);
}

void list_files() {
    if (file_count == 0) { printf("Directory empty.\n"); return; }
    printf("Files:\n");
    for (int i = 0; i < file_count; ++i) printf(" - %s\n", files[i]);
}

void delete_file(const char *name) {
    for (int i = 0; i < file_count; ++i) {
        if (strcmp(files[i], name) == 0) {
            for (int j = i; j < file_count-1; ++j) strcpy(files[j], files[j+1]);
            file_count--;
            printf("Deleted file '%s'\n", name);
            return;
        }
    }
    printf("File not found.\n");
}

int main() {
    create_file("report.txt");
    create_file("data.bin");
    list_files();
    delete_file("report.txt");
    list_files();
    return 0;
}
