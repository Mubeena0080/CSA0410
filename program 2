#include <stdio.h>
#include <stdlib.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>
#include <errno.h>

#define BUF_SIZE 4096

int main(int argc, char *argv[]) {
    if (argc != 3) {
        fprintf(stderr, "Usage: %s source_file dest_file\n", argv[0]);
        exit(EXIT_FAILURE);
    }

    const char *src = argv[1];
    const char *dst = argv[2];

    int fd_src = open(src, O_RDONLY);
    if (fd_src < 0) {
        perror("open source");
        exit(EXIT_FAILURE);
    }

    
    int fd_dst = open(dst, O_WRONLY | O_CREAT | O_TRUNC, S_IRUSR | S_IWUSR | S_IRGRP | S_IROTH);
    if (fd_dst < 0) {
        perror("open dest");
        close(fd_src);
        exit(EXIT_FAILURE);
    }

    char buffer[BUF_SIZE];
    ssize_t nread;
    while ((nread = read(fd_src, buffer, BUF_SIZE)) > 0) {
        ssize_t nwritten = 0;
        while (nwritten < nread) {
            ssize_t w = write(fd_dst, buffer + nwritten, nread - nwritten);
            if (w < 0) {
                perror("write");
                close(fd_src);
                close(fd_dst);
                exit(EXIT_FAILURE);
            }
            nwritten += w;
        }
    }
    if (nread < 0) {
        perror("read");
    }

    close(fd_src);
    close(fd_dst);

    printf("Copied '%s' to '%s' successfully.\n", src, dst);
    return 0;
}
