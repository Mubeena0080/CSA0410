#include <stdio.h>
#include <unistd.h>
#include <string.h>
#include <sys/wait.h>
#include <stdlib.h>

int main() {
    int fd[2];
    if (pipe(fd) == -1) { perror("pipe"); exit(1); }

    pid_t pid = fork();
    if (pid < 0) { perror("fork"); exit(1); }

    if (pid == 0) {
    
        close(fd[1]);
        char buf[128];
        ssize_t n = read(fd[0], buf, sizeof(buf)-1);
        if (n > 0) {
            buf[n] = '\0';
            printf("Child read: %s\n", buf);
        }
        close(fd[0]);
        exit(0);
    } else {
        // Parent: write to pipe
        close(fd[0]);
        const char *msg = "Message from parent via pipe";
        write(fd[1], msg, strlen(msg));
        close(fd[1]);
        wait(NULL);
    }
    return 0;
}
