#include <stdio.h>

int main() {
    int req[50], head, n, i, total = 0;
    printf("Enter number of disk requests: ");
    scanf("%d", &n);
    printf("Enter request queue: ");
    for(i = 0; i < n; i++)
        scanf("%d", &req[i]);
    printf("Enter initial head position: ");
    scanf("%d", &head);

    for(i = 0; i < n; i++) {
        total += abs(head - req[i]);
        head = req[i];
    }

    printf("Total head movement = %d\n", total);
    return 0;
}
