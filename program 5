#include <stdio.h>

int main() {
    int n;
    printf("Enter number of processes: ");
    scanf("%d", &n);

    int pid[n], bt[n], priority[n];
    for (int i = 0; i < n; ++i) {
        pid[i] = i + 1;
        printf("Enter burst time for process P%d: ", pid[i]);
        scanf("%d", &bt[i]);
        printf("Enter priority (lower value = higher priority) for P%d: ", pid[i]);
        scanf("%d", &priority[i]);
    }

    
    for (int i = 0; i < n-1; ++i) {
        for (int j = i+1; j < n; ++j) {
            if (priority[j] < priority[i]) {
                int tmp = priority[i]; priority[i] = priority[j]; priority[j] = tmp;
                tmp = bt[i]; bt[i] = bt[j]; bt[j] = tmp;
                int tmpid = pid[i]; pid[i] = pid[j]; pid[j] = tmpid;
            }
        }
    }

    int wt[n], tat[n];
    wt[0] = 0;
    for (int i = 1; i < n; ++i) {
        wt[i] = wt[i-1] + bt[i-1];
    }
    for (int i = 0; i < n; ++i) {
        tat[i] = wt[i] + bt[i];
    }

    int total_wt = 0, total_tat = 0;
    printf("\nOrder\tProcess\tBurst\tPriority\tWaiting\tTurnaround\n");
    for (int i = 0; i < n; ++i) {
        total_wt += wt[i];
        total_tat += tat[i];
        printf("%d\tP%d\t%d\t%d\t\t%d\t%d\n", i+1, pid[i], bt[i], priority[i], wt[i], tat[i]);
    }

    printf("\nAverage waiting time = %.2f\n", (float)total_wt / n);
    printf("Average turnaround time = %.2f\n", (float)total_tat / n);
    return 0;
}
