#include <stdio.h>
int main() {
    int frames, pages, frame[10], page[30], count[10], i, j, k, pos, faults = 0, flag, min;
    printf("Enter number of frames: ");
    scanf("%d", &frames);
    printf("Enter number of pages: ");
    scanf("%d", &pages);
    printf("Enter page reference string: ");
    for(i = 0; i < pages; i++)
        scanf("%d", &page[i]);

    for(i = 0; i < frames; i++) {
        frame[i] = -1;
        count[i] = 0;
    }

    for(i = 0; i < pages; i++) {
        flag = 0;
        for(j = 0; j < frames; j++)
            if(frame[j] == page[i]) {
                flag = 1;
                count[j] = i;
            }

        if(flag == 0) {
            if(i < frames)
                pos = i;
            else {
                min = count[0];
                pos = 0;
                for(j = 1; j < frames; j++)
                    if(count[j] < min) {
                        min = count[j];
                        pos = j;
                    }
            }
            frame[pos] = page[i];
            count[pos] = i;
            faults++;
        }

        printf("\n");
        for(k = 0; k < frames; k++)
            printf("%d ", frame[k]);
    }
    printf("\nTotal Page Faults = %d\n", faults);
    return 0;
}
