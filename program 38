#include <stdio.h>
int main() {
    int req[50], n, head, size, i, j, temp, total = 0, dir;
    printf("Enter disk size: ");
    scanf("%d", &size);
    printf("Enter number of requests: ");
    scanf("%d", &n);
    printf("Enter requests: ");
    for(i = 0; i < n; i++)
        scanf("%d", &req[i]);
    printf("Enter head position: ");
    scanf("%d", &head);
    printf("Enter direction (1 = right, 0 = left): ");
    scanf("%d", &dir);

    req[n++] = head;
    req[n++] = (dir ? size - 1 : 0);

    for(i = 0; i < n - 1; i++)
        for(j = i + 1; j < n; j++)
            if(req[i] > req[j]) { temp = req[i]; req[i] = req[j]; req[j] = temp; }

    int pos;
    for(i = 0; i < n; i++) if(req[i] == head) pos = i;

    if(dir)
        for(i = pos; i < n - 1; i++) total += abs(req[i + 1] - req[i]);
    else
        for(i = pos; i > 0; i--) total += abs(req[i] - req[i - 1]);

    printf("Total head movement = %d\n", total);
    return 0;
}
