#include <stdio.h>
int main() {
    int indexBlock, n, index[50] = {0}, block, i;
    printf("Enter index block: ");
    scanf("%d", &indexBlock);
    if(index[indexBlock] == 1) {
        printf("Index block already allocated.\n");
        return 0;
    }
    index[indexBlock] = 1;

    printf("Enter number of blocks needed: ");
    scanf("%d", &n);
    printf("Enter block numbers: ");
    for(i = 0; i < n; i++) {
        scanf("%d", &block);
        if(index[block] == 0) {
            index[block] = 1;
            printf("Allocated block %d\n", block);
        } else
            printf("Block %d already allocated\n", block);
    }

    printf("\nFile allocated using index block %d\n", indexBlock);
    return 0;
}
