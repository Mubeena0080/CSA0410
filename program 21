#include <stdio.h>

int main() {
    int block[10], process[10], i, j, nb, np, allocation[10];

    printf("Enter number of blocks: ");
    scanf("%d", &nb);
    printf("Enter block sizes: ");
    for(i = 0; i < nb; i++)
        scanf("%d", &block[i]);

    printf("Enter number of processes: ");
    scanf("%d", &np);
    printf("Enter process sizes: ");
    for(i = 0; i < np; i++)
        scanf("%d", &process[i]);

    for(i = 0; i < np; i++)
        allocation[i] = -1;

    for(i = 0; i < np; i++) {
        for(j = 0; j < nb; j++)
            if(block[j] >= process[i]) {
                allocation[i] = j;
                block[j] -= process[i];
                break;
            }
    }

    for(i = 0; i < np; i++)
        if(allocation[i] != -1)
            printf("Process %d allocated to Block %d\n", i, allocation[i]);
        else
            printf("Process %d not allocated\n", i);
}
