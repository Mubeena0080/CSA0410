#include <stdio.h>
int main() {
    int n, start, len, index[50] = {0}, i, x;
    printf("Enter number of blocks: ");
    scanf("%d", &n);

    do {
        printf("\nEnter starting block: ");
        scanf("%d", &start);
        printf("Enter length of file: ");
        scanf("%d", &len);

        for(i = start; i < start + len; i++) {
            if(index[i] == 0) {
                index[i] = 1;
                printf("Allocated block %d\n", i);
            } else
                printf("Block %d already allocated\n", i);
        }

        printf("\nEnter 1 to continue, 0 to stop: ");
        scanf("%d", &x);
    } while(x == 1);

    return 0;
}
